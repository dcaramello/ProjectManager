        {% for project in projects %}
        
            <div class="col- col-sm-12 col-lg-3">
                <div class="card text-white bg-secondary m-5 mb-5 animate__animated animate__bounceInLeft" style="max-width: 20rem;">
                    <div class="card-header">{{ project.registered ? project.registered|date('Y-m-d') : '' }}</div>
                    <div class="card-body">
                        <h4 class="card-title">{{ project.title }}</h4>
                        <p class="card-text">{{ project.description }}</p>
                        <p class="card-title">Deadline : {{ project.deadline ? project.deadline|date('Y-m-d') : '' }}</p>
                    </div>
                        <a href="{{ path('project_show', {'id': project.id}) }}">show</a>
                        <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a>
                    </div>
                </div>
        {% endfor %}
